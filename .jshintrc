{
	"globals": {
		// Bitovi Tools
		"steal": true,
		"can": true,

		// Supported Libs
		"Zepto": true,

		// QUnit API
		// http://docs.jquery.com/QUnit#API_documentation
		"QUnit": true,
		"test": true,
		"asyncTest": true,
		"expect": true,
		"module": true,
		"ok": true,
		"equal": true,
		"notEqual": true,
		"deepEqual": true,
		"notDeepEqual": true,
		"strictEqual": true,
		"notStrictEqual": true,
		"raises": true,
		"start": true,
		"stop": true
